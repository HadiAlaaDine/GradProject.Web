@model IEnumerable<GradProject.Web.Models.CartItem>
@{
    ViewBag.Title = "My Cart";
    var total = (decimal)(ViewBag.Total ?? 0m);
}

<h2>My Cart</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Your cart is empty.</div>
}
else
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Product</th>
                <th>Description</th>
                <th style="width:120px;">Price</th>
                <th style="width:160px;">Quantity</th>
                <th style="width:120px;">Subtotal</th>
                <th style="width:160px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var sub = item.Product.Price * item.Quantity;
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Description</td>
                    <td>@item.Product.Price.ToString("0.00")</td>
                    <td>
                        @using (Html.BeginForm("Update", "Cart", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("id", item.Id)
                            <div class="input-group">
                                <input type="number" name="qty" value="@item.Quantity" min="1" class="form-control" />
                                <button type="submit" class="btn btn-sm btn-primary">Update</button>
                            </div>
                        }
                    </td>
                    <td>@sub.ToString("0.00")</td>
                    <td>
                        @using (Html.BeginForm("Remove", "Cart", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("id", item.Id)
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="4" class="text-end">Total:</th>
                <th>@total.ToString("0.00")</th>
                <th>
                    @using (Html.BeginForm("Clear", "Cart", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-warning">Clear Cart</button>
                    }
                </th>
            </tr>
        </tfoot>
    </table>
}

<p>
    @Html.ActionLink("Back to Products", "Index", "Products", null, new { @class = "btn btn-secondary" })
</p>
