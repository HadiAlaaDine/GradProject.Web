@model GradProject.Web.Models.Product

@{
    ViewBag.Title = "Product Details";
    var usd = System.Globalization.CultureInfo.GetCultureInfo("en-US");
}

<h2>Product Details</h2>
<hr />

<dl class="dl-horizontal">
    <dt>Category</dt>
    <dd>@Model.Category?.Name</dd>

    <dt>Name</dt>
    <dd>@Model.Name</dd>

    <dt>Description</dt>
    <dd>@Model.Description</dd>

    <dt>Price</dt>
    <dd>@Model.Price.ToString("C", usd)</dd>

    <dt>Created At</dt>
    <dd>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
</dl>

<p class="mt-3">
    @using (Html.BeginForm("Add", "Cart", FormMethod.Post, new { @class = "d-inline" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("productId", Model.Id)
        <button type="submit" class="btn btn-success me-1">Add to Cart</button>
    }

    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning ms-1" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary ms-1" })
</p>
