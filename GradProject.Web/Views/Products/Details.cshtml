@model GradProject.Web.Models.Product

@{
    ViewBag.Title = "Details";
}

<h2>Product Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Category</dt>
        <dd>@Model.Category?.Name</dd>

        <dt>@Html.DisplayNameFor(m => m.Name)</dt>
        <dd>@Model.Name</dd>

        <dt>@Html.DisplayNameFor(m => m.Description)</dt>
        <dd>@Model.Description</dd>

        <dt>@Html.DisplayNameFor(m => m.Price)</dt>
        <dd>@Model.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</dd>

        <dt>@Html.DisplayNameFor(m => m.CreatedAt)</dt>
        <dd>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</p>

@using (Html.BeginForm("Add", "Cart", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("productId", Model.Id)
    <button type="submit" class="btn btn-success">Add to Cart</button>
}
