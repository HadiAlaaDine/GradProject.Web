@model IEnumerable<GradProject.Web.Models.Product>

@{
    ViewBag.Title = "Products";
    var usd = System.Globalization.CultureInfo.GetCultureInfo("en-US");

    int page = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int total = ViewBag.TotalCount ?? 0;
    int totalPages = (int)System.Math.Ceiling(total / (double)pageSize);

    // قيم الفلاتر الحالية (لنثبّتها بالروابط)
    var q = ViewBag.q as string;
    int? categoryId = ViewBag.categoryId as int?;
    decimal? minPrice = ViewBag.minPrice as decimal?;
    decimal? maxPrice = ViewBag.maxPrice as decimal?;
}

<h2>Products</h2>

<!-- Filter / Search (GET) -->
@using (Html.BeginForm("Index", "Products", FormMethod.Get, new { @class = "row g-2 mb-3" }))
{
    <div class="col-sm-4">
        <input type="text" name="q" value="@(q ?? "")" class="form-control" placeholder="Search name/description..." />
    </div>
    <div class="col-sm-3">
        @Html.DropDownList(
            "categoryId",
            (SelectList)ViewBag.CategoryId,
            "-- All Categories --",
            new { @class = "form-control" }
        )
    </div>
    <div class="col-sm-2">
        <input type="number" step="0.01" min="0" name="minPrice"
               value="@(minPrice?.ToString() ?? "")" class="form-control" placeholder="Min $" />
    </div>
    <div class="col-sm-2">
        <input type="number" step="0.01" min="0" name="maxPrice"
               value="@(maxPrice?.ToString() ?? "")" class="form-control" placeholder="Max $" />
    </div>
    <div class="col-sm-1 d-grid">
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
}

<p>
    @Html.ActionLink("Create New Product", "Create", null, new { @class = "btn btn-success mb-2" })
    @Html.ActionLink("Reset Filters", "Index", null, new { @class = "btn btn-outline-secondary mb-2 ms-1" })
</p>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Category</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price (USD)</th>
            <th>Created At</th>
            <th style="width:260px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@(item.Category != null ? item.Category.Name : "")</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("C", usd)</td>
                    <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info mx-1" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })

                        @using (Html.BeginForm("Add", "Cart", FormMethod.Post, new { @class = "d-inline" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("productId", item.Id)
                            <button type="submit" class="btn btn-sm btn-success mx-1">Add to Cart</button>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No products match your filters.</td>
            </tr>
        }
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav aria-label="Products pages">
        <ul class="pagination">
            @{
                // دالة تبني رابط مع الإبقاء على الفلاتر
                Func<int, string> pageUrl = p => Url.Action("Index", new
                {
                    page = p,
                    pageSize = pageSize,
                    q = q,
                    categoryId = categoryId,
                    minPrice = minPrice,
                    maxPrice = maxPrice
                });

                int prev = page - 1;
                int next = page + 1;

                // نافذة أرقام الصفحات حول الحالية
                int start = System.Math.Max(1, page - 2);
                int end = System.Math.Min(totalPages, page + 2);
            }

            <li class="page-item @(page == 1 ? "disabled" : "")">
                <a class="page-link" href="@pageUrl(1)">« First</a>
            </li>
            <li class="page-item @(page == 1 ? "disabled" : "")">
                <a class="page-link" href="@pageUrl(prev)">‹ Prev</a>
            </li>

            @for (int p = start; p <= end; p++)
            {
                <li class="page-item @(p == page ? "active" : "")">
                    <a class="page-link" href="@pageUrl(p)">@p</a>
                </li>
            }

            <li class="page-item @(page == totalPages ? "disabled" : "")">
                <a class="page-link" href="@pageUrl(next)">Next ›</a>
            </li>
            <li class="page-item @(page == totalPages ? "disabled" : "")">
                <a class="page-link" href="@pageUrl(totalPages)">Last »</a>
            </li>
        </ul>
    </nav>
}
