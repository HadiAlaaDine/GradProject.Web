@model IEnumerable<GradProject.Web.Models.Product>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New Product", "Create", null, new { @class = "btn btn-primary mb-2" })
</p>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Category</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>Created At</th>
            <th style="width:260px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Category?.Name</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info mx-1" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })

                    @using (Html.BeginForm("Add", "Cart", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("productId", item.Id)
                        <button type="submit" class="btn btn-sm btn-success mx-1">Add to Cart</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
