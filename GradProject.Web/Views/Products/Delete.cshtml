@model GradProject.Web.Models.Product

@{
    ViewBag.Title = "Delete Product";
    var usd = System.Globalization.CultureInfo.GetCultureInfo("en-US");
}

<h2>Delete Product</h2>
<hr />

<h3 class="text-danger">Are you sure you want to delete this product?</h3>

<dl class="dl-horizontal">
    <dt>Category</dt>
    <dd>@Model.Category?.Name</dd>

    <dt>Name</dt>
    <dd>@Model.Name</dd>

    <dt>Description</dt>
    <dd>@Model.Description</dd>

    <dt>Price</dt>
    <dd>@Model.Price.ToString("C", usd)</dd>

    <dt>Created At</dt>
    <dd>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions mt-3">
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary ms-2" })
    </div>
}
